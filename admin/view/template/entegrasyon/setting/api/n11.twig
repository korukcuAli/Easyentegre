            <input type="text" name="n11_api_key" value="{{ n11_api_key }}" placeholder="N11 Api Keyinizi Giriniz" id="input-meta-api-key" class="form-control" />
            </div>
    </div>

        <div class="clearfix"></div>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="input-meta-title">N11 Api Şifresi</label>
        <div class="col-sm-6">
            <input type="text" name="n11_api_secret" value="{{ n11_api_secret }}" placeholder="N11 Api Secret Giriniz" id="input-meta-api-secret" class="form-control" />
        </div>
    </div>
    </form>
        <div class="clearfix"></div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
